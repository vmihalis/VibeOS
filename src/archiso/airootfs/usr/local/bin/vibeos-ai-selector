#!/usr/bin/env python3
"""
VibeOS AI Selector Launcher
This file is copied to /usr/local/bin/vibeos-ai-selector in the ISO
"""

import sys
import os

# Add vibeos modules to path
sys.path.insert(0, '/usr/lib/vibeos')

try:
    # Import and run the AI selector
    from shell.ai_selector import main
    main()
except ImportError as e:
    print(f"Error: Failed to import AI selector modules: {e}")
    print("Falling back to vibesh...")
    # Fall back to vibesh
    os.execv('/usr/local/bin/vibesh', ['/usr/local/bin/vibesh'])
except Exception as e:
    print(f"Error running AI selector: {e}")
    print("Falling back to vibesh...")
    # Fall back to vibesh
    os.execv('/usr/local/bin/vibesh', ['/usr/local/bin/vibesh'])