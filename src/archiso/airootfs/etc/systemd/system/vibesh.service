[Unit]
Description=VibeOS AI Assistant and Natural Language Shell
After=multi-user.target

[Service]
Type=simple
ExecStart=/usr/local/bin/vibeos-ai-selector
Restart=on-failure
RestartSec=1
StandardInput=tty
StandardOutput=tty
TTYPath=/dev/tty1
TTYReset=yes
TTYVHangup=yes

[Install]
WantedBy=multi-user.target